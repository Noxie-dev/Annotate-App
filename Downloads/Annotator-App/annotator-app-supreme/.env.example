# Application Configuration
VITE_APP_NAME="Annotator App"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT="development"

# API Configuration
VITE_API_URL="http://localhost:3001"
VITE_API_TIMEOUT="30000"
VITE_API_RETRY_ATTEMPTS="3"

# Authentication Configuration
VITE_AUTH_TOKEN_EXPIRY="3600000"
VITE_AUTH_REFRESH_TOKEN_EXPIRY="604800000"
VITE_AUTH_SESSION_TIMEOUT="1800000"
VITE_AUTH_MAX_LOGIN_ATTEMPTS="5"
VITE_AUTH_LOCKOUT_DURATION="900000"

# OAuth Configuration
VITE_OAUTH_GOOGLE_CLIENT_ID="your-google-client-id"
VITE_OAUTH_GITHUB_CLIENT_ID="your-github-client-id"
VITE_OAUTH_REDIRECT_URI="http://localhost:5173/auth/callback"

# Security Configuration
VITE_SECURITY_ENABLE_CSP="true"
VITE_SECURITY_ENABLE_HSTS="true"
VITE_SECURITY_ENABLE_XSS_PROTECTION="true"
VITE_SECURITY_ENABLE_CONTENT_TYPE_NOSNIFF="true"
VITE_SECURITY_ENABLE_REFERRER_POLICY="true"
VITE_SECURITY_ENABLE_PERMISSIONS_POLICY="true"

# Rate Limiting
VITE_RATE_LIMIT_WINDOW="900000"
VITE_RATE_LIMIT_MAX_REQUESTS="100"
VITE_RATE_LIMIT_ENABLE="true"

# File Upload Configuration
VITE_UPLOAD_MAX_FILE_SIZE="52428800"
VITE_UPLOAD_ALLOWED_TYPES="application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain,application/vnd.ms-powerpoint,application/vnd.openxmlformats-officedocument.presentationml.presentation"
VITE_UPLOAD_MAX_FILES="10"

# WebSocket Configuration
VITE_WS_URL="ws://localhost:3001"
VITE_WS_RECONNECT_ATTEMPTS="5"
VITE_WS_RECONNECT_DELAY="5000"

# Logging Configuration
VITE_LOG_LEVEL="info"
VITE_LOG_ENABLE_CONSOLE="true"
VITE_LOG_ENABLE_REMOTE="false"
VITE_LOG_REMOTE_URL=""

# Feature Flags
VITE_FEATURE_MFA_ENABLED="true"
VITE_FEATURE_SOCIAL_AUTH_ENABLED="true"
VITE_FEATURE_REAL_TIME_COLLABORATION="true"
VITE_FEATURE_ADVANCED_ANNOTATIONS="true"
VITE_FEATURE_AI_ASSISTANCE="false"
VITE_FEATURE_ANALYTICS="false"

# Analytics Configuration (if enabled)
VITE_ANALYTICS_GOOGLE_ID=""
VITE_ANALYTICS_MIXPANEL_TOKEN=""

# Error Reporting (if enabled)
VITE_SENTRY_DSN=""
VITE_SENTRY_ENVIRONMENT="development"

# CDN Configuration
VITE_CDN_URL=""
VITE_CDN_ENABLE="false"

# Performance Configuration
VITE_PERFORMANCE_ENABLE_SW="true"
VITE_PERFORMANCE_CACHE_STRATEGY="networkFirst"
VITE_PERFORMANCE_PRELOAD_CRITICAL="true"

# Development Configuration
VITE_DEV_ENABLE_MOCK_API="true"
VITE_DEV_ENABLE_DEBUG_TOOLS="true"
VITE_DEV_ENABLE_HOT_RELOAD="true"

# Testing Configuration
VITE_TEST_ENABLE_COVERAGE="true"
VITE_TEST_COVERAGE_THRESHOLD="80"

# Collaboration Configuration
VITE_COLLAB_MAX_USERS_PER_DOCUMENT="50"
VITE_COLLAB_PRESENCE_UPDATE_INTERVAL="5000"
VITE_COLLAB_AUTO_SAVE_INTERVAL="30000"

# Notification Configuration
VITE_NOTIFICATIONS_ENABLE_PUSH="false"
VITE_NOTIFICATIONS_ENABLE_EMAIL="true"
VITE_NOTIFICATIONS_ENABLE_IN_APP="true"

# Backup Configuration
VITE_BACKUP_ENABLE_AUTO="true"
VITE_BACKUP_INTERVAL="3600000"
VITE_BACKUP_RETENTION_DAYS="30"

# Compliance Configuration
VITE_COMPLIANCE_GDPR_ENABLED="true"
VITE_COMPLIANCE_CCPA_ENABLED="false"
VITE_COMPLIANCE_AUDIT_LOG_ENABLED="true"

# Internationalization
VITE_I18N_DEFAULT_LOCALE="en"
VITE_I18N_FALLBACK_LOCALE="en"
VITE_I18N_SUPPORTED_LOCALES="en,es,fr,de,ja,zh"

# Theme Configuration
VITE_THEME_DEFAULT="dark"
VITE_THEME_ALLOW_SYSTEM="true"
VITE_THEME_CUSTOM_COLORS_ENABLED="false"

# WebRTC Configuration
VITE_SIGNALING_SERVER_URL="ws://localhost:3001"
VITE_TURN_USERNAME=""
VITE_TURN_PASSWORD=""

# File Storage Configuration
VITE_STORAGE_TYPE="s3"
VITE_STORAGE_BUCKET="annotator-app-files"
VITE_STORAGE_REGION="us-east-1"
VITE_STORAGE_CDN_URL=""
VITE_STORAGE_ENABLE_VIRUS_SCAN="true"
VITE_UPLOAD_MAX_FILE_SIZE="52428800"
VITE_UPLOAD_ALLOWED_TYPES="application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"
VITE_UPLOAD_MAX_FILES="10"
